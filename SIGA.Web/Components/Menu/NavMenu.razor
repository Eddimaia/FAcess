@inherits NavMenuPage

<MudDrawer @bind-Open="@DrawerOpen" Elevation="15"  >
    <MudDrawerHeader>
        <MudContainer>
            <MudImage Src="https://via.placeholder.com/150" Height="100" Width="100" Elevation="25" Class="rounded-lg" />
            <MudSpacer />
            <MudChip T="string" Size="Size.Medium" Color="Color.Inherit">@Login</MudChip>
        </MudContainer>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudDivider />
        <MudNavLink Href="/"
                    Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Filled.Home"
                    IconColor="Color.Inherit">
            Início
        </MudNavLink>
        <MudNavGroup Title="Gestão"
                     Expanded="true"
                     Icon="@Icons.Material.Filled.AdminPanelSettings"
                     IconColor="Color.Inherit">
            <MudNavLink Href="/register"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Filled.ManageAccounts"
                        IconColor="Color.Inherit">
                Adicionar Usuário
            </MudNavLink>
            <MudNavLink Href="/projetos"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Filled.AccountTree"
                        IconColor="Color.Inherit">
                Projetos
            </MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="/about"
                    Match="@NavLinkMatch.Prefix"
                    Icon="@Icons.Material.Filled.Info"
                    IconColor="@Color.Inherit">
            Sobre
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.Prefix"
                    OnClick="@LogoutAsync"
                    Icon="@Icons.Material.Filled.ExitToApp"
                    IconColor="Color.Inherit">
            Sair
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>